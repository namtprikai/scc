{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"allowJs": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"strictFunctionTypes": false,
		"skipLibCheck": true,
		"baseUrl": ".",
		"types": ["node", "jest", "webpack-env", "vuetify"],
		"paths": {
			"*": ["types/*"],
			"@/*": ["src/core/*"],
			"@product/*": [],
			"@pconfig/*": []
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": ["node_modules", "/**/*.spec.ts", "/**/tests/*"],
	"jsRules": {
		"class-name": true
	}
}
